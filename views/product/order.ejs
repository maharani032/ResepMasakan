<%- include ('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <%- include ('../component/navbar.ejs') %>
        <div class="body-order">
            <% if (orders.length==0) { %>
             <div class="centered">
                <h2>tidak ada histori pembelian</h2>
             </div>
             <% } else { %>
              <ul class="orders">
                    <% orders.forEach(order => { %>
                    <li class="order-item">
                        <h1>Order - # <%= order._id %>  <a href=""></a></h1>
                        <ul class="order-bahan">
                            <% order.bahans.forEach(o => { %>
                                <li class="order-item"><%= o.bahan.namaBahan %> (<%= o.quantity %> )</li>
                            <% }) %>
                        </ul>
                    </li>
                    <% }) %>
              </ul>
            <% } %>
        </div>
    <%- include ('../includes/end.ejs') %>