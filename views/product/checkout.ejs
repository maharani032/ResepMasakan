<%- include ('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <%- include ('../component/navbar.ejs') %>
            <div class='body-cart'>
                <% if(bahans.length==0){ %>
                    <h1>Keranjang Kosong</h1>
                    <% } else { %>
                        <ul class="cart-item-list">
                            <% bahans.forEach(bahan=>{%>
                                <li class="cart-item">
                                    <div class="row">
                                        <div class="col">
                                            <h1>
                                                <%= bahan.bahanId.namaBahan.toUpperCase() %>
                                            </h1>
                                            <h2>Jumlah item = <%= bahan.quantity %>
                                            </h2>
                                            <h2>Harga =<%=
                                                    bahan.bahanId.harga.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","
                                                    ) %>
                                            </h2>
                                        </div>
                                        <div class="col col-img">
                                            <img class='img-cart' src="/<%=bahan.bahanId.image%>" alt="test">
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                        <div class="centered">
                            <h2>Total : <%= totalSum %> </h2>
                        </div>

                        <div class="order">
                            <button id="order-btn" class="btn">bayar</button>
                            <script src="https://js.stripe.com/v3/"></script>
                            <script>
                                
                                var stripe = Stripe('<%=API_KEY_STRIPE%>');
                                var orderBtn =  document.getElementById( 'order-btn' );
                                orderBtn.addEventListener( 'click', function () {
                                    console.log('test')
                                    stripe.redirectToCheckout( {
                                    
                                        sessionId: '<%= sessionId %>'
                                    } );
                                } );
                            </script>
                        </div>
                        <% } %>
            </div>
            <%- include('../includes/end.ejs') %>