<div class="body-comment">
    <div class="comment-list">
        <h1>Daftar Komentar : </h1>
        <div class="list">
            <% comments.forEach(comment=> { %>
    
                <div class="komentator">
                    <div class="row comment">
                        <div class="col-4">
                            <% if (user.picture!="" && user.picture!=null) { %>
                                <img src="/<%=user.picture%>" class='img-comment' alt="gambar-profil">
                                <% } %>
                        </div>
                        <div class="col-8">
                            <p>
                                <%= comment.name.fname %>
                                    <%= comment.name.lname %>
                            </p>
    
                            <p>
                                <%= comment.komentar %>
                            </p>
                            <% if (user.admin==true) { %>
                                <form action="/delete-comment/<%=comment._id %>?_method=DELETE" method="POST"
                                    class='red-button'>
                                    <button type="submit" class="btn btn-danger btn-delete">Delete</button>
                                    <% } %>
                        </div>
                    </div>
    
    
    
                </div>
                <% }) %>
        </div>
    </div>
    
    <% if(isAuthenticated){ %>
        <div class="komentar">
            <form
                action="/comment/<% if (modeEventorResep==true) { %>event/<%= event._id %> <% } else { %>resep/<%= resep._id %> <% } %>"
                method="POST" autocomplete="off">
                <h5>Komentarlah di bawah sini : </h5>
                <textarea name="Komentar" class="form-control Komentar" row='4' cols='4' placeholder="Komentar"></textarea>
    
                <button type="submit" class="btn btn-dark mt-5 btn-komen">Comment</button>
            </form>
        </div>
        <% } %>
</div>
