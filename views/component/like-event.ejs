<div class="body-like">
    <% if (!isAuthenticated){ %>
        <form action="/like/<%=event._id %>" id='likeOrdislike' method="POST" class='red-button'>
            <button type="submit" class="btn btn-primary">like
                <i class='fas fa-thumbs-up'></i>
            </button>
            <%= event.like.length %> orang menyukai posting ini
        </form>
    <% } else { %>
        <% if(likes.length==0){ %>
            <form action="/like/<%=event._id %>" id='likeOrdislike' method="POST" class='red-button'>
                <button type="submit" class="btn btn-primary">like
                    <i class='fas fa-thumbs-up'></i>
                </button>
            </form>
            <% }else{ %>
                <% for (like of Object.keys(likes)){ %>
                    <% if (likes[like].userId.toString()===user._id.toString()) { %>
                        <form action="/dislike/<%=event._id %>/<%= likes[like]._id %>" id='likeOrdislike' method="POST" class='red-button'>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-thumbs-down"></i>Dislike
                            </button>
                            <%= event.like.length %> orang menyukai posting ini
                        </form>
                        <% break %>
                    <% } else if(likes[likes.length-1].userId.toString()!==user._id.toString()) {%>
                        <form action="/like/<%=event._id %>" id='likeOrdislike' method="POST" class='red-button'>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-thumbs-up"></i>
                                like</button>
                            <%= event.like.length %> orang menyukai posting ini
                        </form>
                        <% break %>
                    <% } %> 
                <% } %> 
            <% } %> 
    <% } %>
    
            
</div>