<%- include ('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>

        <%- include ('../component/navbar.ejs') %> 
        <div class="container container-event">
            <div class="row">
                <div class="col">
                    <% if(editMode===true) {%> 
                        <h1>Edit Event</h1>
                    <% } else { %>
                    <h1>Add Event</h1>
                    <%}%>
                    <form action="/<% if (editMode===true){%>edit-event/<%= event._id %> <%}else{%>add-event<%} %>" method="POST" enctype='multipart/form-data'>
                        <div class="form-group">
                            <label>Nama acara</label>
                            <input name='nameEvent' type="text" class='form-control'autocomplete="off"
                            value='<% if (editMode===true) { %><%= event.nameEvent %> <% } %>'>
                        </div>
                        <div class="form-group">
                            <label>Tempat</label>
                            <input name='tempat' type="text" class='form-control' autocomplete="off"
                            value='<% if (editMode===true) { %><%= event.tempat %> <% } %>'>
                        </div>
                        <div class="form-group">
                            <label>deskripsi</label>
                            <textarea name="deskripsi" class='form-control'rows="4" autocomplete="off"><% if (editMode===true) { %><%= event.Deskripsi %><% } %></textarea>
                        </div>
                        <div class="form-group">
                            <label>Tanggal acara</label>
                            <input name='OnDate' type="date" class='form-control'>
                        </div>
                        <div class="form-group">
                            <label>Upload Image</label>
                            <input type="file" class='form-control' name='ImageEvent'>
                        </div>
                        <button type="submit" class="btn btn-primary btn-postEvent">
                            <% if (editMode) { %>
                                Edit Event
                                <% } else { %>
                                 Add Event
                                <% } %>
                        </button>
                    </form>
                </div>
                
               
            </div>
        </div>
       
           
        <%- include('../includes/end.ejs') %>